<Window x:Class="WpfCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="200" Width="250">
    <StackPanel Margin="10">
        <TextBox x:Name="Input1" Margin="0,5" />
        <TextBox x:Name="Input2" Margin="0,5" />

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,5">
            <Button Content="+" Width="40" Click="Add_Click"/>
            <Button Content="-" Width="40" Click="Sub_Click" Margin="5,0"/>
            <Button Content="*" Width="40" Click="Mul_Click"/>
            <Button Content="/" Width="40" Click="Div_Click" Margin="5,0"/>
        </StackPanel>

        <Label x:Name="Result" FontSize="16" HorizontalAlignment="Center" Margin="0,10"/>
    </StackPanel>
</Window>